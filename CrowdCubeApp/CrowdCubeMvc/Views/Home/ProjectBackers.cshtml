@model CrowdCubeMvc.Models.ProjectCreatorModels
@{
    ViewData["Title"] = "ProjectBackers";
    Layout = "~/Views/Shared/_ProjectCreatorLayout.cshtml";
}

<section class="page-section bg-light" id="portfolio">
    <div class="container">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Backer</th>
                    <th>Amount</th>
                    <th>Fund Date</th>

                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var project in Model.ProjectFunds)
                    {
                        <tr>
                            <td>@project.Backer.Username</td>
                            <td>@project.Package.Amount</td>
                            <td>@project.DateFund</td>
                        </tr>
                    }
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>Backer</th>
                    <th>Amount</th>
                    <th>Fund Date</th>
                </tr>
            </tfoot>
        </table>

    </div>
</section>

@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}

