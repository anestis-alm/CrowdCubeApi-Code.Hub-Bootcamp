@model CrowdCubeMvc.Models.ProjectCreatorModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Carousel-->
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @{
            int count = 0;
            foreach (var project in Model.Projects)
            {
                if (count == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@count"></li>
                }
                if (count == 5)
                {
                    break;
                }
                count++;
            }
        }
    </ol>
    <div class="carousel-inner">
        @{
            int count1 = 0;
            foreach (var project in Model.Projects)
            {

                if (count1 == 0)
                {
                    <div class="carousel-item active">
                        <a href="@(Url.Action("Login", "Home"))">
                            <img class="d-block w-100" src="~/assets/img/@project.ThemeImage" alt="First slide">
                        </a>
                        <div class="carousel-caption d-none d-md-block ">
                            <h5>@project.Title</h5>
                            <p>@project.Description</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <a href="@(Url.Action("Login", "Home"))">
                            <img class="d-block w-100" src="~/assets/img/@project.ThemeImage" alt="First slide">
                        </a>
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@project.Title</h5>
                            <p>@project.Description</p>
                        </div>
                    </div>
                }
                if (count1 == 5)
                {
                    break;
                }
                count1++;

            }

        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Portfolio Grid-->
<section class="page-section bg-light" id="portfolio">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading">Popular Projects</h2>

        </div>
        <div class="row">
            @{
                var count2 = 0;
                foreach (var project in Model.Trends)
                {
                    if (count2 < 3)
                    {
                        <div class="col-lg-4 col-sm-6 mb-4">
                            <div class="portfolio-item">
                                <a href="@(Url.Action("Login", "Home" ))">
                                    <img class="img-fluid" src="~/assets/img/@project.ThemeImage" alt="" />
                                </a>
                                <div class="portfolio-caption">
                                    <div class="portfolio-caption-heading">@project.Title</div>
                                    <div class="portfolio-caption-subheading text-muted">@(project.Description) <br /> Number of Funds: @(project.NumberOfBackers)</div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-4 col-sm-6 mb-4 mb-lg-0">
                            <div class="portfolio-item">
                                <a href="@(Url.Action("Login", "Home"))">
                                    <img class="img-fluid" src="~/assets/img/@project.ThemeImage" alt="" style="height:200px" />
                                </a>
                                <div class="portfolio-caption">
                                    <div class="portfolio-caption-heading">@project.Title</div>
                                    <div class="portfolio-caption-subheading text-muted">@(project.Description) <br /> Number of Funds: @(project.NumberOfBackers)</div>
                                </div>
                            </div>
                        </div>
                    }

                    if (count2 == 5)
                        break;

                    count2++;
                }
            }

        </div>
    </div>
</section>

